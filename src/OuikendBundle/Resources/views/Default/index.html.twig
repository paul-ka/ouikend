<!DOCTYPE html>
<html ng-app="app">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" type="image/png" href="" />
    <title>Sample</title>
    <!-- CSS -->
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <link rel="stylesheet" href='css/style.css'>
    <!-- AngularJS -->
    <script src='js/libs/angular.min.js'></script>
    <script src='js/libs/angular-route.min.js'></script>
    <script src='js/controllers/preparCtrl.js'></script>
    <script src='js/controllers/travelCtrl.js'></script>
    <script src='js/services/preparService.js'></script>
    <script src='js/services/travelService.js'></script>

    <script type="text/javascript">
        function config($routeProvider) {
            $routeProvider
                .when('/', {
                    templateUrl: "views/login.html",
                    controller: 'loginCtrl'
                })
                .when('/prepare', {
                    templateUrl: "views/prepar.html",
                    controller: 'preparCtrl'
                })
                .when('/travel', {
                    templateUrl: "views/travel.html",
                    controller: 'travelCtrl'
                })
                .otherwise({
                    redirectTo: '/'
                });
        }

        function run($rootScope, $location) {
            var path = function() {
                return $location.path();
            };
            $rootScope.$watch(path, function(newVal, oldVal) {
                $rootScope.activetab = newVal;
            });
        }
        angular.module('app', ['ngRoute'])
            .config(config)
            .controller('preparCtrl', preparCtrl)
            .controller('travelCtrl', travelCtrl)
            .service('preparService', preparService)
            .service('travelService', travelService)
            /*.factory('', )*/
            .run(run);
    </script>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-xs-6">
                <a id="btnPrepare" href="#/prepare" class="btn btn-default btn-block" ng-class="colorP">Pr√©parer</a>
            </div>
            <div class="col-xs-6">
                <a id="btnTravel" href="#/travel" class="btn btn-default btn-block" ng-class="colorV">Voyager</a>
            </div>
        </div>

        <ng-view></ng-view>
    </div>
</body>

</html>
